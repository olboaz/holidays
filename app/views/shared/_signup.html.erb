
<!-- Modal -->
<div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="d-flex justify-content-between">
          <%= image_tag "tenor.gif", style:"width: 40px" %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
          <div class="signin-form">
            <div>
              <h2 class="mb-4" style="text-align: center;">Inscription</h2>

              <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <%= f.input :email,
                              required: true,
                              label: false,
                              placeholder: "Email",
                              autofocus: true,
                              input_html: { autocomplete: "Email" }%>
                  <%= f.input :username,
                              required: true,
                              label: false,
                              placeholder: "Pseudo",
                              autofocus: true,
                              input_html: { autocomplete: "Pseudo" }%>
                  <%= f.input :first_name,
                              required: true,
                              label: false,
                              placeholder: "Prénom",
                              autofocus: true,
                              input_html: { autocomplete: "Prénom" }%>
                  <%= f.input :last_name,
                              required: true,
                              label: false,
                              placeholder: "Nom",
                              autofocus: true,
                              input_html: { autocomplete: "Nom" }%>
                  <%= f.input :password,
                              required: true,
                              label: false,
                              placeholder: "Mot de passe",
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation,
                              required: true,
                              label: false,
                              placeholder: "Confirmation du Mot de passe",
                              input_html: { autocomplete: "new-password" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Inscription", class: "btn button-signin col-md-12" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
