<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-dark bg-transparent fixed-top">
<!-- <div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= params[:action] == "home" ? "navbar-dark bg-transparent fixed-top" : "navbar-light" %>"> -->
  <%= link_to root_path, class: "navbar-brand d-flex align-items-center", style: "background: white; opacity: 0.8; padding: 5px; border-radius: 4px;     border: 1px solid #eabe07;"  do %>
    <%= image_tag "tenor.gif" %>
    <h6 class="ml-2" style="font-style: italic; font-family: Roboto;color:#eabe07;margin-bottom: 0;">My Holidays</h6>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Ajout de lieu", new_places_path, class: "dropdown-item" %>
            <%= link_to "Mes lieux", places_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <button type="button" class="btn btn-outline-light mr-2" data-toggle="modal" data-target="#signIn" method='get'>
          Connection
        </button>
        <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#signUp"  method='get'>
          Inscription
        </button>
      <% end %>
    </ul>

  </div>
</div>


