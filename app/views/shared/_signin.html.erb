
<!-- Modal -->
<div class="modal fade" id="signIn" tabindex="-1" role="dialog" aria-labelledby="signInLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="d-flex justify-content-between">
          <%= image_tag "tenor.gif", style:"width: 40px" %>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="signin-form">
          <div>
            <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            label: false,
                            placeholder: "Email",
                            input_html: { autocomplete: "Email" } %>
                <%= f.input :password,
                            required: false,
                            label: false,
                            placeholder: "Mot de passe",
                            input_html: { autocomplete: "Mot de passe" } %>
                <%= f.input :remember_me, label: "se rappeler de moi", as: :boolean%>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Se connecter", class: "btn button-signin col-md-12" %>
              </div>
            <% end %>
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



