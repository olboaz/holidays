<div class="signin-form">
  <div>
    <h2 class="mb-4" style="text-align: center;">Mon Profil</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Mon adresse mail",required: true, autofocus: true %>
          <%= f.input :username,
                    required: true,
                    label: "Mon Pseudo",
                    placeholder: "Pseudo",
                    autofocus: true,
                    input_html: { autocomplete: "Pseudo" }%>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,
                      label: "Nouveau Mot de passe",
                      hint: "Ne pas remplir si tu ne veux pas changer ton mot de passe",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: "Confirmes ton nouveau mot de passe",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      label: "Mot de passe actuel",
                      hint: "Tu dois indiquer ton mot de passe actuel si tu confirmes les changements",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Mise Ã  jour", class: "btn button-signin col-md-12" %>
        </div>
      <% end %>

     <!--  <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->

      <%= link_to "Retour", :back %>
  </div>
</div>
